{
    "trainee": {
        "class_name": "ViLTRanker",
        "pretrained_model_name_or_path": "dandelin/vilt-b32-finetuned-nlvr2",
        "max_position_embeddings": 256,
        "ignore_mismatched_sizes": true
    },
    "trainer_class": "ViLTRankerTrainer",
    "tokenizer": {
        "class_name": "BertTokenizer",
        "pretrained_model_name_or_path": "bert-base-uncased"
    },
    "feature_extractor":{
        "class_name": "ViltFeatureExtractor",
        "pretrained_model_name_or_path": "dandelin/vilt-b32-finetuned-nlvr2",
        "size": 512
    },
    "verbosity": 10,
    "train_dataset": "data/viquae_dataset/train",
    "eval_dataset": "data/viquae_dataset/validation",
    "passage2image_file_name": "data/viquae_wikipedia/passage2image.json",
    "metric": "retrieval",
    "image_dir": "data/Commons",
    "kb": "data/viquae_passages",
    "M": 12,
    "n_relevant_passages": 1,
    "search_key": "search",
    "tokenization_kwargs": {
        "max_length": 256,
        "padding": "max_length"
    },
    "checkpoint": {
        "resume_from_checkpoint": null
    },
    "callbacks_args": [
        {
            "Class": "EarlyStoppingCallback",
            "early_stopping_patience": 10
        }
    ],
    "training_kwargs": {
        "do_train": true,
        "do_eval": false,
        "do_predict": false,
        "group_by_length": false,
        "output_dir": "experiments/reranking/vilt/train",
        "logging_dir": "experiments/reranking/vilt/train/logs",
        "evaluation_strategy": "steps",
        "per_device_train_batch_size": 1,
        "per_device_eval_batch_size": 8,
        "gradient_accumulation_steps": 1,
        "eval_accumulation_steps": 1,
        "max_grad_norm": 1.0,
        "max_steps": 100000,
        "learning_rate": 1e-05,
        "weight_decay": 0,
        "lr_scheduler_type": "constant",
        "warmup_steps": 0,
        "logging_steps": 100,
        "save_steps": 200,
        "eval_steps": 200,
        "dataloader_num_workers": 0,
        "dataloader_pin_memory": true,
        "adam_beta1": 0.9,
        "adam_beta2": 0.999,
        "ignore_data_skip": true,
        "remove_unused_columns": false,
        "prediction_loss_only": false,
        "greater_is_better": true,
        "load_best_model_at_end": true,
        "metric_for_best_model": "eval_MRR@N*M",
        "report_to": "tensorboard",
        "label_names": ["switch_labels"]
    }
}
